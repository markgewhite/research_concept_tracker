# ArXiv Concept Tracker Configuration

# Embedding Model
EMBEDDING_MODEL=Qwen/Qwen2.5-Embedding
CACHE_DIR=./cache

# ArXiv API
ARXIV_RATE_LIMIT=3.0
ARXIV_MAX_RETRIES=3

# Kalman Filter Parameters
MAX_VELOCITY=0.05
MAX_ACCELERATION=0.02
PROCESS_NOISE=0.01
MEASUREMENT_NOISE=0.1

# Similarity Thresholds
THRESHOLD_AUTO_INCLUDE=0.85
THRESHOLD_STRONG=0.75
THRESHOLD_MODERATE=0.65
THRESHOLD_REJECT=0.55

# Tracking Defaults
DEFAULT_WINDOW_MONTHS=6
MAX_PAPERS_PER_WINDOW=500

# API Settings
API_HOST=0.0.0.0
API_PORT=8000
LOG_LEVEL=INFO
