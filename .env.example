# ArXiv Concept Tracker Configuration

# Embedding Model
EMBEDDING_MODEL=Qwen/Qwen3-Embedding-0.6B
CACHE_DIR=./cache

# ArXiv API
ARXIV_RATE_LIMIT=3.0
ARXIV_MAX_RETRIES=3

# Kalman Filter Parameters
# MAX_VELOCITY: Controls minimum similarity accepted (1.0 = 50% similarity minimum)
# Lower = stricter, Higher = more exploratory
MAX_VELOCITY=1.0
# MAX_ACCELERATION: Controls smoothness of concept drift (lower = smoother)
MAX_ACCELERATION=0.6
PROCESS_NOISE=0.01
MEASUREMENT_NOISE=0.1

# Similarity Thresholds
# Papers are categorized by similarity to current concept
THRESHOLD_AUTO_INCLUDE=0.85
THRESHOLD_STRONG=0.60
THRESHOLD_MODERATE=0.50
THRESHOLD_REJECT=0.40

# Tracking Defaults
DEFAULT_WINDOW_MONTHS=6
MAX_PAPERS_PER_WINDOW=2000

# API Settings
API_HOST=0.0.0.0
API_PORT=8000
LOG_LEVEL=INFO
